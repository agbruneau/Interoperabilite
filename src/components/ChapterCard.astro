---
interface Props {
  href: string;
  romanNumeral: string;
  title: string;
  description: string;
  domain?: 'verb' | 'noun' | 'signal' | 'neutral';
}

const { href, romanNumeral, title, description, domain = 'neutral' } = Astro.props;

const domainColors = {
  verb: 'border-l-accent-verb',
  noun: 'border-l-accent-noun',
  signal: 'border-l-accent-signal',
  neutral: 'border-l-border-subtle',
};
---

<a href={href} class="chapter-card block border-l-4 {domainColors[domain]} hover:no-underline group">
  <div class="flex items-start gap-4">
    <span class="text-text-tertiary font-sans text-sm font-medium shrink-0 pt-1">
      {romanNumeral}
    </span>
    <div>
      <h3 class="font-sans font-semibold text-white group-hover:text-accent-link transition-colors mb-2">
        {title}
      </h3>
      <p class="text-text-secondary text-sm line-clamp-2">
        {description}
      </p>
    </div>
  </div>
</a>
